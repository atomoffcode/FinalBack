@inject ILayoutService LayoutService
@{

    IDictionary<string, string> settings = await LayoutService.GetSettings();

    
}

@{
    ViewData["Title"] = "Index";
}

<div class="container d-none" >
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.4284905031!2d49.85137057660263!3d40.37719495804374!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d079efb5163%3A0xc20aa51a5f0b5e01!2sCode%20Academy!5e0!3m2!1sen!2saz!4v1684750058801!5m2!1sen!2saz" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>
<style>
    .contact_adress .icon, .ct_title {
        color: #44d62c;
    }

        .contact_adress .icon{
            margin:0 10px 0 0;
        }
    .adress{
        padding-top:20px;
        display: flex;
        align-items:center;
    }

    .contact-info-text{
        color: #888888;
        font-size: 20px;
    }
</style>
<div class="container pt-100px pb-100px">
    <div class="row">
        <div class="col-lg-12">
            <div id="google-map">
                
                @(Html.Raw(settings.FirstOrDefault(s => s.Key == "map").Value))

            </div>
        </div>
    </div>
    <div class="row mt--60 pt-100px">
        <div class="col-lg-5 col-md-5 col-12">
            <div class="contact_adress">
                <div class="ct_address">
                    <h3 class="ct_title">Location & Details</h3>
                </div>
                <div class="address_wrapper">
                    <div class="adress">
                        <div class="icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-info-text">
                            @(Html.Raw(settings.FirstOrDefault(s => s.Key == "contact-address").Value))
                            Azerbaijan
                        </div>
                    </div>
                    <div class="adress">
                        <div class="icon">
                            <i class="far fa-envelope"></i>
                        </div>
                        <div class="contact-info-text">
                            @(Html.Raw(settings.FirstOrDefault(s => s.Key == "contact-email").Value))
                        </div>
                    </div>
                    <div class="adress">
                        <div class="icon">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="contact-info-text">
                            @(Html.Raw(settings.FirstOrDefault(s => s.Key == "contact-phone").Value))
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>
