@model List<Product>
@if (Model != null && Model.Count > 0)
{
    <table class="table w-100">
        <tbody>
            @foreach (Product product in Model)
            {
                <tr>
                    
                    <td class="d-flex justify-content-center align-items-center"><img style="width:100px; height:100px;" src="~/assets/photos/products/@product.MainImage"/></td>
                    <td class="pro-title d-flex justify-content-center align-items-center"><a asp-controller="store" asp-action="product" asp-route-id="@product.Id">@product.Title</a></td>
                </tr>
            }
        </tbody>
    </table>
}
