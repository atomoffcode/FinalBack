@model Slider
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Slider Update Page</h1>
            </div>

        </div>
    </div>
    <div class="col-lg-12 ">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="MainHead"></label>
                <input asp-for="MainHead" class="form-control" />
                <span asp-validation-for="MainHead" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubHead"></label>
                <input asp-for="SubHead" class="form-control" />
                <span asp-validation-for="SubHead" class="text-danger"></span>
            </div>
            <div class="form-group fileInput">
                <label asp-for="File"></label>
                <input asp-for="File" accept="image/jpeg" class="form-control-file">
                <span asp-validation-for="File" class="text-danger"></span>

            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>





