@model IndexPost
@{
    ViewData["Title"] = "Detail";
}


<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Category Page</h1>
            </div>
            <div class="col-lg-3">
                <a asp-area="manage" asp-controller="indexpost" asp-action="index" class="btn btn-primary">Go To Home</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card" style="width: 18rem;">
            @if (!string.IsNullOrWhiteSpace(Model.Image))
            {
                <img class="card-img-top" src="~/assets/photos/category/@Model.Image" alt="Card image cap">
            }
            <div class="card-body">
                <h5 class="card-title">MainHead: @Model.MainHead</h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">SubHead: @Model.SubHead</h5>
            </div>
            <div class="card-body">
                <h5 class="card-title">Product Title: @Model.Product.Title</h5>
            </div>
        </div>
    </div>

</div>
