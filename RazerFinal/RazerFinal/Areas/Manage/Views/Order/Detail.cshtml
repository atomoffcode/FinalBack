@model Order
@{
    ViewData["Title"] = "Detail";
}


<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Order Page</h1>
            </div>
            <div class="col-lg-3">
                <a asp-area="manage" asp-controller="order" asp-action="index" class="btn btn-primary">Go To Home</a>
                <a asp-area="manage" asp-controller="order" asp-action="ChangeStatus" asp-route-id="@Model.Id" class="btn btn-warning">Status: @Model.Status.ToString()</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <h1 class="h4 mb-4 text-gray-800">Order No: @Model.No</h1>

        <h1 class="h6 mb-1 text-gray-800">Name:</h1>
        <h1 class="h5 mb-4 text-gray-800">@Model.Name</h1>

        <h1 class="h6 mb-1 text-gray-800">SurName:</h1>
        <h1 class="h5 mb-4 text-gray-800">@Model.SurName</h1>

        <h1 class="h6 mb-1 text-gray-800">Email:</h1>
        <h1 class="h5 mb-4 text-gray-800">@Model.Email</h1>

        <h1 class="h6 mb-1 text-gray-800">Country:</h1>
        <h1 class="h5 mb-4 text-gray-800">@Model.Country</h1>

        <h1 class="h6 mb-1 text-gray-800">City:</h1>
        <h1 class="h5 mb-4 text-gray-800">@Model.City</h1>

        <h1 class="h6 mb-1 text-gray-800">State:</h1>
        <h1 class="h5 mb-4 text-gray-800">@Model.State</h1>

        <h1 class="h6 mb-1 text-gray-800">PosTal Code:</h1>
        <h1 class="h5 mb-4 text-gray-800">@Model.PostalCode</h1>

        <h1 class="h6 mb-1 text-gray-800">Items:</h1>
        <ul class="list text-gray-800 ">
            @foreach (OrderItem item in Model.OrderItems)
            {
                <li class="list-group mb-3">
                    <h1 class="h6 mb-1 text-gray-800">Id:@item.ProductId</h1>

                    <h1 class="h6 mb-1 text-gray-800">Price:@item.Price</h1>

                    <h1 class="h6 mb-1 text-gray-800">Count:@item.Count</h1>

                    <h1 class="h6 mb-1 text-gray-800">Total Price:@(item.Price * item.Count)</h1>
                </li>
            }
        </ul>
    </div>

</div>
