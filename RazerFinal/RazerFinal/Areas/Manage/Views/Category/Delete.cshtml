
@{
    ViewData["Title"] = "Delete";
    int count = 0;
    int count2 = 0;
}


<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Category Page</h1>
            </div>
            <div class="col-lg-3">
                <a asp-area="manage" asp-controller="category" asp-action="index" class="btn btn-primary">Go To Home</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card" style="width: 18rem;">
            @if (!string.IsNullOrWhiteSpace(Model.Image))
            {
                <img class="card-img-top" src="~/assets/photos/category/@Model.Image" alt="Card image cap">
            }
            <div class="card-body">
                <h5 class="card-title">Category Name: @Model.Name</h5>
            </div>
        </div>
    </div>
    @if (Model.Products != null && Model.Products.Count() > 0)
    {
        <div class="col-lg-12">
            <h4>Products</h4>

            <table class="table table-bordered ">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Created By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        count2++;
                        <tr>
                            <td>@count</td>
                            <td>@product.Title</td>
                            <td>@product.CreatedAt.ToString("dd-MMM-yyyy").ToUpper()</td>
                            <td>@product.CreatedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
