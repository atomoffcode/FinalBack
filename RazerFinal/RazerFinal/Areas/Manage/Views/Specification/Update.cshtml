@model Specification
@{
    ViewData["Title"] = "Create";
    IEnumerable<CategorySpec> categories = ViewBag.Categories;
    SelectList selectListItems = new SelectList(categories, nameof(CategorySpec.Id), nameof(CategorySpec.Name));
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Specification Create Page</h1>
            </div>

        </div>
    </div>
    <div class="col-lg-12 ">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group parentInput">
                <label asp-for="CategorySpecId"></label>
                <select class="form-control" asp-for="CategorySpecId" asp-items="@selectListItems">
                </select>
                <span asp-validation-for="CategorySpecId" class="text-danger"></span>

            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>



