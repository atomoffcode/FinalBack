@model Blog
@{
    ViewData["Title"] = "Detail";
}


<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Blog Page</h1>
            </div>
            <div class="col-lg-3">
                <a asp-area="manage" asp-controller="blog" asp-action="index" class="btn btn-primary">Go To Home</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <h1 class="h4 mb-4 text-gray-800">@Model.Title</h1>
        <h1 class="h5 mb-4 text-gray-800">@Html.Raw(Model.MainDescription)</h1>

        <div class="card" style="width: 18rem;">

            <img class="card-img-top" src="~/assets/photos/blogs/@Model.Image" alt="Card image cap">

        </div>
    </div>

</div>
