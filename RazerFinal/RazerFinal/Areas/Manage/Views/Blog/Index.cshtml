@model PageNatedList<Blog>
@{
    ViewData["Title"] = "Index";
    int count = (Model.PageIndex - 1) * 3;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Blogs Page</h1>
            </div>
            <div class="col-lg-2">
                @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin"))
                {
                    <a asp-area="manage" asp-controller="blog" asp-action="create" class="btn btn-primary">Create</a>


                }
                
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="indexContainer">
            @await Html.PartialAsync("_BlogIndexPartial",Model)

        </div>

    </div>

</div>
